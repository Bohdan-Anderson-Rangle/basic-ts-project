{
    "compilerOptions": {
      "lib": ["ESNext"],
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "strict": true,
      "typeRoots": ["./node_modules/@types"],
      "baseUrl": ".",
      "module": "commonjs",    
      "sourceRoot": "src",
      "noEmit": false,
      "target": "ES6",
      "outDir": "dist",
      "resolveJsonModule": true      
    },
    "include": ["packages"],
    "exclude": [
        "node_modules/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*",
        "**/*.spec.ts",
        "**/*.test.ts"
      ]
  }
  